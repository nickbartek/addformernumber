<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generowanie i Dodawanie Liczb</title>
</head>
<body>

    <p id="generatedNumber">Wygenerowana liczba: <span id="randomNumber">Brak</span></p>
    <input type="number" id="userInput1" placeholder="Wpisz pierwszą liczbę">
    <input type="number" id="userInput2" placeholder="Wpisz drugą liczbę">
    <button onclick="dodajLiczby()">Dodaj</button>
    <p id="result">Wynik dodawania: <span id="additionResult">Brak</span></p>
    <p id="result1">Wynik dodawania: <span id="additionResult1">Brak</span></p>

    <script>
        arr=[];
        var userInput1;
        var wynik

        function generujLiczbe() {
            
            const wygenerowanaLiczba = Math.floor(Math.random() * 100) + 1;
            arr.push(wygenerowanaLiczba)
            document.getElementById('randomNumber').textContent = arr;
        }

        function dodajLiczby() {
            userInput1 = parseFloat(document.getElementById('userInput1').value);
            const userInput2 = parseFloat(document.getElementById('userInput2').value);

            if (!isNaN(userInput1) && !isNaN(userInput2)) {
                const wynikDodawania = userInput1 + userInput2;
                document.getElementById('additionResult').textContent = wynikDodawania;
            } else {
                alert('Wprowadź poprawne liczby!');
                
            }
        }

        // Generowanie liczby przy załadowaniu strony
        for(var i=1; i<10; i++){
            generujLiczbe();
        
            setTimeout(generujLiczbe,1000)
            setInterval(generujLiczbe,500)
    
            wynik=arr[1]+arr[2]
            document.getElementById('additionResult1').textContent = wynik;
    
    
        }

    </script>

</body>
</html>