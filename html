<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zapisywanie zmiennych w tablicy</title>
</head>
<body>

    <label for="numberInput">Wpisz liczbę:</label>
    <input type="number" id="numberInput">

    <button onclick="zapiszLiczbe()">Zapisz liczbę</button>

    <p>Wprowadzone liczby: <span id="displayNumbers">Brak</span></p>

    <script>
        let liczby = [];

        function zapiszLiczbe() {
            const inputElement = document.getElementById('numberInput');
            const displayElement = document.getElementById('displayNumbers');

            // Pobieramy wartość z pola tekstowego
            const wpisanaLiczba = parseFloat(inputElement.value);

            // Sprawdzamy, czy wartość jest liczbą
            if (!isNaN(wpisanaLiczba)) {
                liczby.push(wpisanaLiczba);
                displayElement.textContent = liczby.join(', ');
            } else {
                alert('Wprowadź poprawną liczbę!');
            }

            // Czyszczenie pola tekstowego po dodaniu liczby
            inputElement.value = 'wprowadz nastepną liczbe';
        }
    </script>

</body>
</html>