<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wprowadź liczbę</title>
</head>
<body>

    <label for="numberInput">Wpisz liczbę:</label>
    <input type="number" id="numberInput" onkeydown="checkEnter(event)">

    <p>Wprowadzona liczba: <span id="displayNumber">Brak</span></p>
    <p>wygenerowane liczby<span id="wygenerowane">Brak</span></p>

    <script>
        var displayarray
        arr=[9,8,0]
        function checkEnter(event) {
            if (event.key === 'Enter') {
                zapiszLiczbe();
                // Zapobieganie domyślnej akcji (przesłanie formularza)
                event.preventDefault();
            }
        }

        function zapiszLiczbe() {
            var wygenerowanaliczba=Math.floor(Math.random()*10);
            arr.unshift(wygenerowanaliczba)
            
            
            const inputElement = document.getElementById('numberInput');
            const displayElement = document.getElementById('displayNumber');
            displayarray = document.getElementById('wygenerowane').textContent=arr;
            //displayarray=arr
            //document.getElementById('displayNumbers').textContent = zapisaneLiczby
            // Pobieramy wartość z pola tekstowego
            const wpisanaLiczba = parseFloat(inputElement.value);
            
            var wynik=arr[0]+arr[1];
            if(wpisanaLiczba===wynik){
                alert('correct')
            }
            
            
            // Sprawdzamy, czy wartość jest liczbą
            if (!isNaN(wpisanaLiczba)) {
                displayElement.textContent = wpisanaLiczba;
            } else {
                alert('Wprowadź poprawną liczbę!');
            }

            // Czyszczenie pola tekstowego po dodaniu liczby
            inputElement.value = '';
        }
    </script>

</body>
</html>